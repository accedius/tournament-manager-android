<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/tv_name"
            android:gravity="left"
            android:layout_weight="3"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/tv_won"
            android:layout_weight="2"
            android:textSize="12sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/tv_lost"
            android:layout_weight="2"
            android:textSize="12sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/tv_draws"
            android:layout_weight="2"
            android:textSize="12sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/tv_won_per"
            android:layout_weight="2"
            android:textSize="12sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/tv_sets_won"
            android:layout_weight="2"
            android:textSize="12sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/tv_sets_lost"
            android:layout_weight="2"
            android:textSize="12sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/tv_sets_won_avg"
            android:layout_weight="2"
            android:textSize="12sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/tv_sets_lost_avg"
            android:layout_weight="2"
            android:textSize="12sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/tv_sets_per"
            android:layout_weight="2"
            android:textSize="12sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/tv_balls_won"
            android:layout_weight="2"
            android:textSize="12sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/tv_balls_lost"
            android:layout_weight="2"
            android:textSize="12sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/tv_balls_won_avg"
            android:layout_weight="2"
            android:textSize="12sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/tv_balls_lost_avg"
            android:layout_weight="2"
            android:textSize="12sp"/>



    </LinearLayout>

</android.support.v7.widget.CardView>