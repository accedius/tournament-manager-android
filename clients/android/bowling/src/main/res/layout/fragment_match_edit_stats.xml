<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Switch
            android:id="@+id/individual_throw_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/track_individual_throws"
            android:textOff="@string/no"
            android:textOn="@string/yes" />

        <TextView
            android:id="@+id/simple_stats_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/simple_stats"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/simple_stats_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <TextView
            android:id="@+id/complex_stats_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/complex_stats" />

        <Spinner
            android:id="@+id/participant_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/complex_stats_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>