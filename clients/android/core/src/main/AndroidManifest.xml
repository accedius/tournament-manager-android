<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fit.cvut.org.cz.tournamentmanager">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".presentation.activities.MainActivity"
            android:label="@string/main_acc_name">
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".presentation.services.CompetitionService" />

        <activity
            android:name=".presentation.activities.ToolbarActivity"
            android:label="@string/title_activity_toolbar" />
        <activity
            android:name=".presentation.activities.TopLevelActivity"
            android:label="Toplvl" />
        <activity android:name="fit.cvut.org.cz.tmlibrary.presentation.activities.AbstractTabActivity" />
    </application>

</manifest>
